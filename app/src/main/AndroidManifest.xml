<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.huawaii.notifications"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material.Settings">

        <!--<meta-data
            android:name="flyme.notification.AuthorityManagement"
            android:value="force_open" />-->

        <meta-data
            android:name="flyme.notification.AuthorityManagement"
            android:value="force_close"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="ResultActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CaptureInfo.CaptureNotificationInfoActivity"
            android:label="一键获取"
            android:screenOrientation="portrait">
            <intent-filter> 
                <action android:name="com.huawaii.notification.CAPTURE_NOTIFICATION_INFO"/>
                <category android:name="android.intent.category.DEFAULT"/>
                    
            </intent-filter>
        </activity>

        <service
            android:name=".CaptureInfo.CaptureNotificationInfoService"
            android:exported="true"
            android:label="@string/service_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService"/>
            </intent-filter>
        </service>
        <service
            android:name=".ForegroundService"
            android:exported="false"/>
    </application>

</manifest>